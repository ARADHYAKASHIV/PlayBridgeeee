generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tokens    OAuthToken[]
  transfers TransferLog[]
}

enum AuthProvider {
  GOOGLE
  SPOTIFY
}

model OAuthToken {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  userId       String       @db.ObjectId
  provider     AuthProvider
  accessToken  String
  refreshToken String?
  expiresAt    DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
}

enum TransferStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
}

model TransferLog {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  userId          String         @db.ObjectId
  status          TransferStatus @default(PENDING)
  totalTracks     Int            @default(0)
  processedTracks Int            @default(0)
  failedCount     Int            @default(0)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  failedTracks FailedTrack[]
}

model FailedTrack {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  transferId  String   @db.ObjectId
  title       String
  artist      String
  album       String?
  errorReason String
  createdAt   DateTime @default(now())

  transfer TransferLog @relation(fields: [transferId], references: [id], onDelete: Cascade)
}
